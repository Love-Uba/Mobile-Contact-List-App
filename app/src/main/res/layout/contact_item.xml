<?xml version="1.0" encoding="utf-8"?>

<!--Single item contacts to be duplicated by the recycler adapter-->

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_items"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/contact_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:padding="5dp"
        android:src="@drawable/round_person"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="#1CAFA2"
        app:strokeWidth="4dp"
        android:background="@color/teal_200"
        />

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_blank_fragment"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/contact_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toEndOf="@+id/contact_icon"
        app:layout_constraintTop_toTopOf="@+id/contact_icon"
        />

</androidx.constraintlayout.widget.ConstraintLayout>